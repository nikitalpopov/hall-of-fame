---
title: Hall of fame
layout: layout-default.hbs
---
<div class="flex text-2xl font-semibold mb-4">{{ title }}</div>
<div class="grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-4 overflow-y-auto pr-4">
    {{#each collections.pages}}
        {{#if (gt this.data.rating 8)}}
            <a class="hover:text-pink-500" href="{{ this.url }}">
                <sl-card class="shadow-sm hover:shadow-md" style="max-width: 200px;">
                    <img
                        slot="image"
                        src="{{ this.data.artwork }}"
                        alt="{{ this.data.title }}"
                    >

                    <div>
                        {{ this.data.title }}
                    </div>
                </sl-card>
            </a>
        {{/if}}
    {{/each}}
</div>
