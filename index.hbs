---
title: Hall of Fame
layout: layout-default.hbs
---
<div class="flex text-2xl font-semibold mb-4">{{ title }}</div>
<div class="overflow-y-auto pr-4">
    <sl-rating class="inline-block py-4" max="10" value="10" readonly></sl-rating>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-4">
        {{#each collections.pages}}
            {{#if (eq this.data.rating '10')}}
                <a class="hover:text-pink-500" href="{{ this.url }}">
                    <sl-card class="shadow-sm hover:shadow-md" style="max-width: 200px;">
                        <img
                            slot="image"
                            src="{{ this.data.artwork }}"
                            alt="{{ this.data.title }}"
                        >

                        <div>
                            <div class="text-gray-500">{{ this.data.artist }}</div>
                            <div class="font-semibold">{{ this.data.release }}</div>
                        </div>
                    </sl-card>
                </a>
            {{/if}}
        {{/each}}
    </div>
    <sl-rating class="inline-block py-4" max="10" value="9" readonly></sl-rating>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-4 overflow-y-auto pr-4">
        {{#each collections.pages}}
            {{#if (eq this.data.rating '9')}}
                <a class="hover:text-pink-500" href="{{ this.url }}">
                    <sl-card class="shadow-sm hover:shadow-md" style="max-width: 200px;">
                        <img
                            slot="image"
                            src="{{ this.data.artwork }}"
                            alt="{{ this.data.title }}"
                        >

                        <div>
                            <div class="text-gray-500">{{ this.data.artist }}</div>
                            <div class="font-semibold">{{ this.data.release }}</div>
                        </div>
                    </sl-card>
                </a>
            {{/if}}
        {{/each}}
    </div>
</div>
